---
import Container from "../components/shared/Container.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Login - Your Account">
    <main class="flex flex-col min-h-screen pt-32">
        <Container>
            <div class="flex justify-center items-center m-4 sm:m-6 lg:m-9">
                <div class="w-full max-w-md bg-white rounded-xl shadow-md px-16 py-14 relative md:py-10 md:px-8">
                    {/* Header */}
                    <div class="text-center mb-12">
                        <h1 class="text-2xl font-bold text-gray-900 mb-3">Log In to Your Account</h1>
                        <p class="text-gray-500">
                            Access your dashboard and manage your finances securely
                        </p>
                    </div>

                    {/* Login Form */}
                    <form id="loginForm" class="space-y-6" method="POST">
                        <div class="space-y-2">
                            <label for="email" class="block text-sm font-medium text-gray-700">
                                Email
                            </label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                placeholder="Enter your email"
                                class="w-full px-6 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                required
                            />
                        </div>

                        <div class="space-y-2">
                            <label for="password" class="block text-sm font-medium text-gray-700">
                                Password
                            </label>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                placeholder="Enter your password"
                                class="w-full px-6 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                required
                            />
                        </div>

                        {/* Remember Me & Forgot Password */}
                        <div class="flex items-center justify-between mt-8">
                            <div class="flex items-center">
                                <input
                                    type="checkbox"
                                    id="remember"
                                    name="remember"
                                    class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                                />
                                <label for="remember" class="ml-2 block text-sm text-gray-700 px-5 py-1">
                                    Remember me
                                </label>
                            </div>
                            <a href="#" class="text-sm text-blue-600 hover:text-blue-500">
                                Forgot password?
                            </a>
                        </div>

                        {/* Login Button */}
                        <button
                            type="submit"
                            class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors mt-8">
                            Log In
                        </button>

                        {/* Error Message Placeholder */}
                        <div id="error-message" class="hidden text-red-500 text-sm text-center">
                        </div>
                    </form>

                    {/* Sign Up Link */}
                    <div class="text-center text-sm mt-8">
                        <span class="text-gray-600">Don't have an account?</span>
                        <a href="/signup" class="text-blue-600 hover:text-blue-500 ml-1">
                            Sign up here
                        </a>
                    </div>

                    {/* Security Note */}
                    <div class="text-center text-xs text-gray-500 flex items-center justify-center gap-1 mt-6">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                            />
                        </svg>
                        <span>Your credentials are kept secure</span>
                    </div>
                </div>
            </div>
        </Container>
        <!-- Logged In Modal -->
        <div id="alreadyLoggedInModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
            <div class="bg-white p-8 rounded-xl max-w-md w-full text-center">
                <h2 class="text-2xl font-semibold mb-4">Already Logged In</h2>
                <p class="text-gray-600 mb-6">You are currently logged in to your account.</p>
                <div class="flex flex-col gap-3">
                    <button 
                        id="goToDemoButton"
                        class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 transition-colors"
                    >
                        Go to Dashboard
                    </button>
                </div>
            </div>
        </div>
    </main>
</Layout>
<script>
    import { auth } from '../lib/firebase/client';
    import { signInWithEmailAndPassword } from 'firebase/auth';
    import { onAuthStateChanged } from 'firebase/auth';

    const loginForm = document.getElementById('loginForm');
    const loginButton = document.querySelector('button[type="submit"]');
    const errorMessage = document.getElementById('error-message');
    const modal = document.getElementById('alreadyLoggedInModal');
    const goToDemoButton = document.getElementById('goToDemoButton');

    // Form submission handler
    loginForm?.addEventListener('submit', async (e) => {
        e.preventDefault();
        loginButton.disabled = true;
        loginButton.textContent = 'Logging in...';

        const formData = new FormData(loginForm);
        const email = formData.get('email');
        const password = formData.get('password');

        try {
            const userCredential = await signInWithEmailAndPassword(auth, email, password);
            console.log('Login successful:', userCredential.user);
            sessionStorage.setItem('authSession', 'true');
            window.location.href = '/demo';
        } catch (error) {
            console.error('Login error:', error);
            errorMessage?.classList.remove('hidden');
            errorMessage.textContent = `Login failed: ${error.message}`;
            loginButton.disabled = false;
            loginButton.textContent = 'Log In';
        }
    });

    // Check if user is already logged in
    const isNewSession = !sessionStorage.getItem('authSession');
    onAuthStateChanged(auth, (user) => {
        if (user && !isNewSession) {
            modal?.classList.remove('hidden');
        } else if (user && isNewSession) {
            auth.signOut();
        }
    });

    // Modal handler
    goToDemoButton?.addEventListener('click', () => {
        window.location.href = '/demo';
    });
</script>




