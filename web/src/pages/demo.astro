---
import Container from "../components/shared/Container.astro";
import Layout from "../layouts/Layout.astro";

// Hardcoded data for MVP
const userData = {
    name: "Ana",
    balance: {
        stablecoin: 1200.00,
        localCurrency: 1200.00,
        currency: "USD"
    },
    transactions: [
        { date: "Dec 5, 2024", amount: -50, party: "Maria", type: "sent" },
        { date: "Dec 3, 2024", amount: 300, party: "Juan", type: "received" },
        { date: "Dec 1, 2024", amount: -100, party: "Local Shop", type: "sent" }
    ]
};
---

<Layout title="Your Dashboard">
    <main class="flex flex-col gap-y-20 md:gap-y-32 overflow-hidden">
        <Container>
            <div class="flex flex-col gap-y-10 mt-32">
                {/* Header Section */}
                <div class="flex flex-col gap-y-2">
                    <h1 class="text-heading-1 font-semibold text-2xl sm:text-3xl md:text-4xl">Your Dashboard</h1>
                    <p class="text-gray-600">Welcome back, {userData.name}</p>
                </div>

                {/* Balance Card */}
                <div class="bg-white rounded-lg shadow-md p-6 max-w-md">
                    <h2 class="text-lg font-medium mb-4">Your Balance</h2>
                    <div class="text-3xl font-bold mb-2">{userData.balance.stablecoin.toFixed(2)} USDG</div>
                    <div class="text-gray-600">â‰ˆ ${userData.balance.localCurrency.toFixed(2)} {userData.balance.currency}</div>
                </div>

                {/* Action Buttons */}
                <div class="flex gap-4">
                    <button class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">
                        Send Money
                    </button>
                    <button class="bg-gray-100 text-gray-800 px-6 py-2 rounded-lg hover:bg-gray-200">
                        Request Money
                    </button>
                </div>

                {/* Transaction History */}
                <div class="mt-8 bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-semibold mb-4 text-gray-900">Recent Transactions</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full bg-white rounded-lg shadow">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Party</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                {userData.transactions.map(tx => (
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{tx.date}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            <span class={tx.amount > 0 ? "text-green-600" : "text-red-600"}>
                                                {tx.amount > 0 ? "+" : ""}{tx.amount} USDG
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            {tx.type === "sent" ? "To: " : "From: "}{tx.party}
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                </div>

                {/* Additional Info */}
                <div class="text-sm text-gray-500 mt-6">
                    <p>Transfers settle within minutes with minimal fees.</p>
                    <p class="mt-2">All values shown are estimates. Actual exchange rates may vary.</p>
                </div>
            </div>
        </Container>
    </main>
</Layout>